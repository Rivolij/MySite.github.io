


//Тест


// Ответы
const correctAnswers = [4, 9, 'Корусант', 'Алый', 7, 'Повстанцы'];


// Константы
const checkButton = document.getElementById('checkButton');
const resetButton = document.getElementById('resetButton');
const result = document.getElementById('result');


// проверка/получение ответов
checkButton.addEventListener('click', function(event) {
    event.preventDefault(); // Предотвращение обновления страницы
    let score = 0;
    const feedbackElements = [
        document.getElementById('feedback1'),
        document.getElementById('feedback2'),
        document.getElementById('feedback3'),
        document.getElementById('feedback4'),
        document.getElementById('feedback5'),
        document.getElementById('feedback6')
    ];
    const userAnswers = [
        document.getElementById('answer1').value,
        document.getElementById('answer2').value,
        document.getElementById('answer3').value,
        document.getElementById('answer4').value,
        document.getElementById('answer5').value,
        document.getElementById('answer6').value
    ];
    
    feedbackElements.forEach((feedback, index) => {
        feedback.innerHTML = ''; // Очистить предыдущие сообщения
        if (userAnswers[index].toLowerCase() === correctAnswers[index].toString().toLowerCase()) {
            score++;
            feedback.innerHTML = 'Ответ правильный!';
            feedback.className = 'correct';
        } else {
            feedback.innerHTML = `Ответ неправильный, правильный ответ: ${correctAnswers[index]}`;
            feedback.className = 'incorrect';
        }
    });
    
    result.innerHTML = `Вы набрали ${score} из ${correctAnswers.length} баллов.`;
    resetButton.style.display = 'block'; // Показать кнопку сброса
});
resetButton.addEventListener('click', function() {
    document.querySelectorAll('input[type="number"], input[type="text"]').forEach(input => {
        input.value = ''; // Очистить поля ввода
    });
    document.querySelectorAll('.feedback').forEach(feedback => {
        feedback.innerHTML = ''; // Очистить сообщения
    });
    result.innerHTML = ''; // Очистить результат
    resetButton.style.display = 'none'; // Скрыть кнопку сброса
});
